<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hengli.mylibrarytest.library.DayPickerView
        android:id="@+id/pickerViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        calendar:colorDayName="#666"
        android:background="@color/selected_day_text"
        calendar:colorNormalDay="@color/normal_day"
        calendar:drawRoundRect="true"
        calendar:firstMonth="january"
        calendar:lastMonth="december"
        calendar:textSizeDay="12sp"
        calendar:textSizeDayName="12sp"
        calendar:textSizeMonth="12sp" />
</RelativeLayout>